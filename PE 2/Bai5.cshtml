@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style>
        body {
            background-color: aliceblue;
            font-family: Arial, Helvetica, sans-serif;
            text-align: center; /* căn giữa ngang */
            line-height: 150px;
        }

        #mainmenu {
            background-color: crimson;
            height: 200px;
        }

        #header {
            background-color:blue;
            padding: 5px 0px;
            border-top: 2px solid black;
            border-bottom: 2px solid black;
            
        }

        #content {
            width:70%;
            height:500px;
            float: left;
            background-color:aquamarine;
        }


        #sidebar {
            margin-left: 70%; /*phần lề trái của Content, bỏ đi chiều rộng của Sidebar*/
            min-height: 500px; /*chiều cao tối thiểu */
            border-left: 2px solid black;
            background-color: darkolivegreen;
        }

        #footer {
            background-color: chocolate;
            border-top: 2px solid black;
            text-align: center;
            padding: 5px 0px;
            
        }
   




    </style>
</head>
<body>
    <div id="container">
        
        <div id="mainmenu">
           MAIN MENU
        </div>
        <div id="header">
            HEADER
        </div>
        <div id="content">
            CONTENT
        </div>
        <div id="sidebar">
            SIDE BAR
        </div>
        <div id="footer">
            FOOTER
        </div>

    </div>
</body>
</html>
