            <input type="text" id="nameInput" placeholder="Nhập họ và tên"> @*placeholder là chữ mờ mờ trước khi nhập liệu*@
            <input type="text" id="addressInput" placeholder="Nhập địa chỉ">
            <button onclick="updateInfo()">Cập nhật</button>
            <button onclick="hideForm()">Hủy</button>
        </div>

        <script>
            /// tìm thằng có id edit , hiện ra màn hình = display = block
            function change() {
                document.getElementById('editForm').style.display = 'block'; 
            }

            function hideForm() {
                document.getElementById('editForm').style.display = 'none';
            }

            // Cập nhật thông tin
            function updateInfo() {
                let name = document.getElementById('nameInput').value;
                let address = document.getElementById('addressInput').value;

                if (name === '' || address === '') {
                    alert('Vui lòng nhập đầy đủ thông tin!');
                    return;
                }

                document.getElementById('showName').innerText = name;
                document.getElementById('showAddress').innerText = address;

                hideForm(); // ẩn form sau khi cập nhật
            }
        </script>
