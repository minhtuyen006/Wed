    <script language="javascript" >
        function CheckQua() {
            let ch1 = document.querySelectorAll('.checkqua');
            let ch2 = document.getElementById('gift');

            // Nếu được tích thì hiện bảng, ngược lại ẩn
            let anyChecked = Array.from(ch1).some(chk => chk.checked);

            ch2.style.display = anyChecked ? 'block' : 'none';
        }
    </script>
    
